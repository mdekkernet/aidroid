{
  "$id": "https://aidroid.mdekker.net/schemas/schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIDroid Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "provider": {
      "type": "string",
      "enum": [
        "retell",
        "vapi"
      ]
    },
    "voice-agents": {
      "type": "array",
      "items": {
        "$ref": "https://aidroid.mdekker.net/schemas/voice-agent.json"
      }
    },
    "voice-agents-dir": {
      "type": "string"
    }
  },
  "required": [
    "provider"
  ]
}