{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AIDroid Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "model": {
            "type": "string"
          },
          "temperature": {
            "type": "number"
          },
          "prompt": {
            "type": "string"
          },
          "begin_message": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "model",
          "temperature",
          "prompt",
          "begin_message"
        ]
      }
    }
  },
  "required": [
    "agents"
  ]
}